<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainScreen">
   <children>
      <HBox prefHeight="100.0" prefWidth="200.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <MenuBar prefHeight="25.0" prefWidth="700.0">
              <menus>
                <Menu mnemonicParsing="false" text="Customers">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Close" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Appointments">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Delete" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <MenuBar prefWidth="100.0">
              <menus>
                <Menu mnemonicParsing="false" onAction="#onLogout" text="Logout">
                  <items>
                    <MenuItem mnemonicParsing="false" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
         </children>
      </HBox>
      <VBox prefHeight="200.0" prefWidth="100.0" spacing="25.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <TableView fx:id="appointmentsTable" prefHeight="600.0" prefWidth="800.0">
              <columns>
                <TableColumn fx:id="col_apptID" prefWidth="79.0" text="Appt ID" />
                <TableColumn fx:id="col_title" prefWidth="71.0" text="Title" />
                  <TableColumn fx:id="col_description" prefWidth="75.0" text="Description" />
                  <TableColumn fx:id="col_location" prefWidth="75.0" text="Location" />
                  <TableColumn fx:id="col_type" prefWidth="75.0" text="Type" />
                  <TableColumn fx:id="col_start" prefWidth="75.0" text="Start" />
                  <TableColumn fx:id="col_end" prefWidth="75.0" text="End" />
                  <TableColumn fx:id="col_customerID" prefWidth="101.0" text="Customer ID" />
                  <TableColumn fx:id="col_userID" prefWidth="84.0" text="User ID" />
                  <TableColumn fx:id="col_contactID" prefWidth="89.0" text="Contact ID" />
              </columns>
            </TableView>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="100.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#onAddAppt" text="New Appointment" />
                  <Button disable="true" mnemonicParsing="false" onAction="#onEditAppt" text="Edit Appointment" />
                  <Button mnemonicParsing="false" onAction="#onDeleteAppt" text="Delete Appointment" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
